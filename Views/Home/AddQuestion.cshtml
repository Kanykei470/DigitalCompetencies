@model DigitalСompetencies1.Models.TestBank

@{
    ViewData["Title"] = "AddQuestion";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Добавить новый вопрос</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class ="form-control" asp-items="ViewBag.Category"></select>
            </div>
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Op1" class="control-label"></label>
                <input asp-for="Op1" class="form-control" />
                <span asp-validation-for="Op1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Op2" class="control-label"></label>
                <input asp-for="Op2" class="form-control" />
                <span asp-validation-for="Op2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Op3" class="control-label"></label>
                <input asp-for="Op3" class="form-control" />
                <span asp-validation-for="Op3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Op4" class="control-label"></label>
                <input asp-for="Op4" class="form-control" />
                <span asp-validation-for="Op4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAns" class="control-label"></label>
                <input asp-for="CorrectAns" class="form-control" />
                <span asp-validation-for="CorrectAns" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

